<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/padding_tiny" android:layout_marginTop="@dimen/padding_tiny" android:layout_marginRight="@dimen/padding_tiny" android:layout_marginBottom="@dimen/padding_tiny" app:cardCornerRadius="1dp" app:cardUseCompatPadding="true">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">

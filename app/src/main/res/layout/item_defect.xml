            <TextView android:gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/tvAddPhoto" android:background="?attr/selectableItemBackground" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/add_photo" style="@style/Description"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

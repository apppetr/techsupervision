        <TextView android:id="@+id/tvDesc" android:paddingLeft="@dimen/padding_short" android:paddingRight="@dimen/padding_short" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding_small" android:text="@string/defect_desc" style="@style/Text"/>

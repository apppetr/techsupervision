<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/background_splash" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="666dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_normal">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_height="59dp"
            android:scaleType="fitCenter"
            android:src="@drawable/big_logo" />

        <View
            android:id="@+id/vLine"
            android:layout_width="245dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="@dimen/padding_32"
            android:background="@color/white_80" />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visual_diagnostic"
            android:textColor="@color/white"
            android:textSize="20sp" />



        <Button
            android:id="@+id/button_first"
            android:layout_width="248dp"
            android:layout_height="52dp"
            android:layout_marginTop="200dp"
            android:text="@string/next" />

    </LinearLayout>

</RelativeLayout>
